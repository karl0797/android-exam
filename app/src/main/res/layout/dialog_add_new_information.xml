<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="15dp"
    android:elevation="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/line1"
            android:padding="20dp"
            android:background="@color/LightGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                   android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:text="ADD NEW INFORMATION"
                android:layout_marginBottom="2dp"/>


        </LinearLayout>

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                style="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/grey"
                android:text="Personal Information"
                android:layout_marginBottom="2dp"/>

            <EditText
                android:maxLines="1"
                android:id="@+id/AddNew_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_radius_white"
                android:drawableStart="@drawable/ic_person"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-light"
                android:hint="Firstname"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/grey"
                style="@style/TextAppearance.AppCompat.Medium"/>

            <EditText
                android:maxLines="1"
                android:id="@+id/AddNew_lname"
                android:inputType="textPersonName"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_person"
                android:padding="10dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_radius_white"
                android:hint="Lastname"
                android:textColor="@color/grey"
                android:drawableStart="@drawable/ic_person"
                style="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                android:maxLines="1"
                android:id="@+id/AddNew_bday"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_calendar"
                android:padding="10dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_radius_white"
                android:hint="Birtday"
                android:textColor="@color/grey"
                android:drawableStart="@drawable/ic_calendar"
                style="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                style="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/grey"
                android:text="Address and Contact Information"
                android:layout_marginBottom="2dp"/>

            <EditText
                android:maxLines="1"
                android:id="@+id/AddNew_email"
                android:inputType="textEmailAddress"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-light"
                android:drawableLeft="@drawable/ic_email"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_radius_white"
                android:hint="Email Address"
                android:textColor="@color/grey"
                android:drawableStart="@drawable/ic_email"
                style="@style/TextAppearance.AppCompat.Medium"/>

            <EditText
                android:maxLines="1"
                android:maxLength="11"
                android:id="@+id/AddNew_mnumber"
                android:inputType="number"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_phone"
                android:padding="10dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_radius_white"
                android:hint="Mobile Number"
                android:textColor="@color/grey"
                android:drawableStart="@drawable/ic_phone"
                style="@style/TextAppearance.AppCompat.Medium"/>

            <EditText
                android:maxLines="1"
                android:id="@+id/AddNew_address"
                android:inputType="textEmailAddress"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-light"
                android:drawableLeft="@drawable/ic_address"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_radius_white"
                android:hint="Address"
                android:textColor="@color/grey"
                android:drawableStart="@drawable/ic_address"
                style="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                style="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/grey"
                android:text="Contact Person"
                android:layout_marginBottom="2dp"/>

            <EditText
                android:maxLines="1"
                android:id="@+id/AddNew_cperson"
                android:inputType="textEmailAddress"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_person"
                android:padding="10dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_radius_white"
                android:hint="Name"
                android:textColor="@color/grey"
                android:drawableStart="@drawable/ic_person"
                style="@style/TextAppearance.AppCompat.Medium"/>

            <EditText
                android:maxLines="1"
                android:maxLength="11"
                android:id="@+id/AddNew_cpersonnumber"
                android:inputType="number"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_phone"
                android:padding="10dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_radius_white"
                android:hint="Mobile Number"
                android:textColor="@color/grey"
                android:drawableStart="@drawable/ic_phone"
                style="@style/TextAppearance.AppCompat.Medium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_save"
                android:layout_marginRight="5dp"
                style="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:text="save"
                android:background="@drawable/rectangle_radius_blue_3"
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_marginLeft="5dp"
                style="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:text="cancel"
                android:background="@drawable/rectangle_radius_red_3"
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>